# Environmental variables to be sourced in the profile file.

# Default programs:
export EDITOR="emacsclient -cn"
export VISUAL="emacsclient -cn"
export ALTERNATE_EDITOR=""
export IMAGE_VIEWER="sxiv -a"
export VIDEO_VIEWER="mpv"
export TERMINAL="alacritty"
export BROWSER="dbrowsel"
export READER="zathura"
export FILE="lf"
export CALCURSE_PAGER="mdview"

# Set the XDG variables by myself since I don't want
# the program "localising" the names:
export XDG_CONFIG_HOME="$HOME/.config"
export XDG_DATA_HOME="$HOME/.local/share"
export XDG_DOCUMENTS_DIR="$HOME/docs"
export XDG_DOWNLOAD_DIR="$HOME/down"
export XDG_MUSIC_DIR="$HOME/music"
export XDG_PICTURES_DIR="$HOME/images"
export XDG_VIDEOS_DIR="$HOME/videos"

# Default paths:
export MAIL="$XDG_DATA_HOME/mail"

# Less color configuration:
export LESS=-R
export LESS_TERMCAP_mb=$'\E[1;31m'     # begin blink
export LESS_TERMCAP_md=$'\E[1;36m'     # begin bold
export LESS_TERMCAP_me=$'\E[0m'        # reset bold/blink
export LESS_TERMCAP_so=$'\E[01;44;33m' # begin reverse video
export LESS_TERMCAP_se=$'\E[0m'        # reset reverse video
export LESS_TERMCAP_us=$'\E[1;32m'     # begin underline
export LESS_TERMCAP_ue=$'\E[0m'        # reset underline

# Less default settings:
export LESS='-i -J -M -R -W -x4 -z-4'

# Additional paths for use in scripts:
export LBIN="$HOME/.local/bin"
export LSHARE="$XDG_DATA_HOME"

# Home clean-up:
export ZDOTDIR="$XDG_CONFIG_HOME/zsh"
export LESSHISTFILE="$XDG_CONFIG_HOME/lesshist"
export PASSWORD_STORE_DIR="$XDG_DATA_HOME/password-store"
export GOPATH="$HOME/.local/go"
export CARGO_HOME="$XDG_CONFIG_HOME/cargo"
export CCACHE_CONFIGPATH="$HOME/.cache/ccache"
export XAUTHORITY="$XDG_RUNTIME_DIR/Xauthority"
export INPUTRC="$XDG_CONFIG_HOME/inputrc"
export GNUPGHOME="$XDG_DATA_HOME/gnupg"

# Password generation:
export DPASS_OPTS='-C "$(find "$XDG_DOCUMENTS_DIR/notes" -type f | shuf -n1)"'

# Store default $PATH to use for "aliases":
export DEFAULT_PATH="$PATH"

# Add $LBIN to $PATH, so that it takes preference:
export PATH="$LBIN:$PATH"
